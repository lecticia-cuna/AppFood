<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/popular_img"
            android:layout_width="280dp"
            android:layout_height="190dp"
            app:riv_corner_radius= "14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/offers3"/>

        <TextView
            android:id="@+id/popular_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Produtos Populares"
            android:textColor="#595454"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/popular_descricao"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#595454"
            android:textStyle="bold"
            android:text="Descrição"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/ratingbar"
                android:layout_marginLeft="-5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/alice"
                android:text="5.0"
                android:id="@+id/popular_avaliacao"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="20% de Desconto"
                android:textColor="@color/purple_700"
                android:textStyle="bold"
                android:gravity="end"
                android:fontFamily="@font/alice"
                android:id="@+id/popular_desconto"/>


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>